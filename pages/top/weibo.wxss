/**index.wxss**/
.banners {
  width: 100%;
  height: 200px;
}

.banner{
  position: relative;
}

.banner-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 8px;
  padding-top: 6px;
  padding-right: 8px;
  padding-bottom: 6px;
  margin-left: 8px;
  margin-right: 8px;
  margin-top: 2px;
  background-color: #fff;
}
.item-sequence{
  color: #e4ab0f;
  height: 20px;
  line-height: 20px;
  padding: 0 5px;
  width: 5%;
  font-size: 14px;
}

.item-title {
  position:relative;
  width: 100%;
  padding-left: 8px;
  padding-right: 8px;
}
.item-title-bg {
  position: absolute;
  width: 0%;
  background: rgb(219, 107, 107);
  margin-left: 31px;
  margin-right: 8px;
  margin-top: 23px;
  height: 2px;
  border-radius: 1px;
}
.item-title-delete{
  color: rgb(151, 9, 9);
}

.item-heat{
  color: rgb(219, 107, 107);
  height: 20px;
  line-height: 20px;
  padding: 5 5px;
  width: 15%;
  font-size: 14px;
}

.news-item-right{
  width: 80px;
  height: 80px;
}

.news-image{
  width: 80px;
  height: 80px;
}

.news-item-title{
  font-size: 14px;
}

.load-btn{
  margin-left: 8px;
  margin-right: 8px;
  margin-top: 16px;
  margin-bottom: 16px;
}